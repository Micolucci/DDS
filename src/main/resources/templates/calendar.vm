#parse("/templates/layout.vm") 
#@mainLayout()

<div style="overflow-x:auto;">
    <table class="egt">

        <caption>Detalles de Eventos</caption>

        <thead>

            <tr>

                <th scope="col">Descripción</th>

                <th>Fecha</th>

                <th>ID_ubicación</th>

                <th>Repeticion</th>

                <th>Sugerencia</th>

                <th>Generar sugerencia</th>

            </tr>

        </thead>
        <tbody>

            #foreach($evento in $eventos)
            <tr>

                <th>$!evento.getDescripcion()</th>

                <th>$!evento.getFecha()</th>

                <th>$!evento.getUbicacion()</th>

                <th>$!evento.getRepeticion()</th>

                <th>
                    #if ($evento.getSugerencia())
                    <input type="submit" name="$evento" value="iD: $!evento.getSugerencia()"> 
                    #end #if (!$evento.getSugerencia())
                    <input type="submit" name="$evento" value="ID: NULL"> 
                    #end

                </th>

                <th>
                    <input type="submit" name="$evento" value="Solicitar Nueva Sugerencia">
                </th>

            </tr>
            #end
        </tbody>

    </table>
</div>

#end